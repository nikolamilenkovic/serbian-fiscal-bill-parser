{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "lib": ["ES2017", "DOM"],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "include": ["./lib/src/*.ts"]
}
